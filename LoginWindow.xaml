<Window x:Class="Send_Whatsapp.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="120" Width="220">
    <Grid>
        <TextBlock Text="Email" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,10,0,0" />
        <TextBox x:Name="txtEmail" VerticalAlignment="Top" HorizontalAlignment="Left" Width="100" Margin="67,10,0,0" />

        <TextBlock Text="Password" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,40,0,0" />
        <PasswordBox x:Name="txtPassword" VerticalAlignment="Top" HorizontalAlignment="Left" Width="150" Margin="65,40,0,0" />

        <Button Content="Login" Width="60" Height="20" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,70,10,0" Click="Login_Click"/>
    </Grid>
</Window>
